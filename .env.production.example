# Production Environment Configuration Example
# Copy this to .env.production and fill with actual production values
# NEVER commit .env.production to version control

# Database Configuration (Production)
DB_HOST=your_production_db_host
DB_PORT=3306
DB_NAME=your_production_database
DB_USER=your_production_user
DB_PASSWORD=your_very_secure_production_password

# SSL Configuration (Production - REQUIRED)
DB_SSL=true
ENABLE_HTTPS=true
HTTPS_PORT=443

# Redis Configuration (Production)
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# Application Configuration (Production)
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Logging Configuration (Production)
LOG_LEVEL=warn
LOG_FILE=logs/production.log

# JWT Configuration (Production - REQUIRED if using JWT)
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars
JWT_EXPIRES_IN=1h

# Admin Configuration (Production)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_very_secure_admin_password

# Email Configuration (Production)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_secure_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Cache TTL Configuration (Production - Optimized)
CACHE_TTL_SEARCH=3600
CACHE_TTL_STATISTICS=7200
CACHE_TTL_WORK_DETAILS=3600
CACHE_TTL_PERSONS=3600
CACHE_TTL_ORGANIZATIONS=3600

# Pagination Configuration (Production)
DEFAULT_LIMIT=20
MAX_LIMIT=50

# File Upload Configuration (Production)
UPLOAD_PATH=/secure/uploads/
MAX_FILE_SIZE=5242880

# Rate limiting settings (Production - Strict)
RATE_LIMIT_GENERAL=100
RATE_LIMIT_SEARCH=20
RATE_LIMIT_DOWNLOAD=10
RATE_LIMIT_METRICS=50
RATE_LIMIT_RELATIONAL=30
SLOW_DOWN_AFTER=20
SLOW_DOWN_DELAY=500
SLOW_DOWN_MAX=5000

# Security Configuration (Production - Strict)
ENABLE_CORS=true
CORS_ORIGIN=https://yourdomain.com
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# Monitoring Configuration (Production)
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60000

# Production Security Settings
DEBUG_SQL=false
ENABLE_REQUEST_LOGGING=true
LOG_PERFORMANCE=true

# Additional Production Security
TRUST_PROXY=true
SECURE_COOKIES=true
SESSION_SECRET=your_secure_session_secret
BCRYPT_ROUNDS=12

# Monitoring and Alerting (if applicable)
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_newrelic_key

# Backup Configuration (if applicable)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30