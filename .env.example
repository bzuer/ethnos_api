# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_password

# SSL Configuration
DB_SSL=true
ENABLE_HTTPS=true
HTTPS_PORT=3443

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/api.log

# JWT Configuration (if used)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# Email Configuration (if used)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Cache TTL Configuration (seconds)
CACHE_TTL_SEARCH=1800
CACHE_TTL_STATISTICS=3600
CACHE_TTL_WORK_DETAILS=1800
CACHE_TTL_PERSONS=1800
CACHE_TTL_ORGANIZATIONS=1800

# Pagination Configuration
DEFAULT_LIMIT=20
MAX_LIMIT=100

# File Upload Configuration
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760

# Rate limiting settings (production-safe defaults)
RATE_LIMIT_GENERAL=1000
RATE_LIMIT_SEARCH=100
RATE_LIMIT_DOWNLOAD=50
RATE_LIMIT_METRICS=200
RATE_LIMIT_RELATIONAL=100
SLOW_DOWN_AFTER=50
SLOW_DOWN_DELAY=100
SLOW_DOWN_MAX=2000

# Security Configuration
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development/Debug Configuration
DEBUG_SQL=false
ENABLE_REQUEST_LOGGING=true
LOG_PERFORMANCE=true