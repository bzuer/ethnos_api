# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_password

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/api.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL Configuration (seconds)
CACHE_TTL_SEARCH=3600
CACHE_TTL_STATISTICS=86400
CACHE_TTL_WORK_DETAILS=7200

# Pagination Configuration
DEFAULT_LIMIT=20
MAX_LIMIT=100

# File Upload Configuration
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760

# Security Configuration
# Rate limiting settings (relaxed limits, no IP blocking)
RATE_LIMIT_GENERAL=200
RATE_LIMIT_SEARCH=50
RATE_LIMIT_DOWNLOAD=30
RATE_LIMIT_METRICS=100
RATE_LIMIT_RELATIONAL=50
SLOW_DOWN_AFTER=100
SLOW_DOWN_DELAY=50
SLOW_DOWN_MAX=1000